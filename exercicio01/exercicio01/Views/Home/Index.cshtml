@model Cliente

@{
    ViewData["Title"] = "Cadastrar Cliente";
}

<div class="text-center">
    <h1 class="display-10">Cadastre-se</h1>
    <form asp-controller="Cliente" asp-action="Cadastrar" method="post">

  <div class="form-group">
    <label for="nome">Nome</label>
    <input type="text" asp-for="nome" class="form-control" placeholder="Informe seu nome">
  </div>

    <div class="form-group">
    <label for="sexo">Sexo</label>
    <input type="text" asp-for="sexo" class="form-control" placeholder="Informe seu sexo">
  </div>

    <div class="form-group">
    <label for="cpf">CPF</label>
    <input type="text" asp-for="cpf" class="form-control" placeholder="Informe seu CPF">
  </div>

    <div class="form-group">
    <label for="rg">RG</label>
    <input type="text" asp-for="rg" class="form-control" placeholder="Informe seu RG">
  </div>

    <div class="form-group">
    <label for="datadenascimento">Data de Nascimento</label>
    <input type="text" asp-for="datadenascimento" class="form-control" placeholder="Informe sua data de nascimento">
  </div>

    <div class="form-group">
    <label for="enndereco">Endereço</label>
    <input type="text" asp-for="endereco" class="form-control" placeholder="Informe seu endereço">
  </div>

  <button type="submit" class="btn btn-primary">Cadastrar</button>
</form>

</div>

